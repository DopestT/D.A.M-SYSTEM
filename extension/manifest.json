{
  "manifest_version": 3,
  "name": "D.A.M-SYSTEM",
  "version": "0.1.0",
  "description": "Cognitive Firewall - Neutralize media distractions and reclaim your focus",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ]
}
